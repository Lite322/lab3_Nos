<Window x:Class="lab3_Nos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3_Nos"
        mc:Ignorable="d"
        Title="Симулятор гитариста" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Red"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="btNewGame" Click="btNewGame_Click">Новая игра</Button>
            <Button x:Name="btRunGame" Click="btRunGame_Click">Загрузить игру</Button>
            <Button x:Name="btExit" Click="btExit_Click">Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
